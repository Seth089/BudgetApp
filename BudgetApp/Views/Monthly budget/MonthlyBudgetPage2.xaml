<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BudgetApp.Views.Monthly_budget.MonthlyBudgetPage2"
             Title="Utilities">

    <StackLayout Padding="20">
        <Label Text="*Need to add and subtract, SQL?*"/>
        <Label Text="Thoughts for this being first is to get neccesities out of the way"/>
        <Label Text=""/>
        
        <!-- Utilities -->
        <Label FontSize="Large" Text="Power"/>
        <Editor x:Name="powerInput" Keyboard="Numeric"/>
        <Label FontSize="Large" Text="Water"/>
        <Editor x:Name="waterInput" Keyboard="Numeric"/>
        <Label FontSize="Large" Text="Gas"/>
        <Editor x:Name="gasInput" Keyboard="Numeric"/>
        <Label FontSize="Large" Text="Internet"/>
        <Editor x:Name="internetInput" Keyboard="Numeric"/>
        


        <!-- Display the received total income -->
        <Label x:Name="receivedTotalIncomeLabel"
               FontSize="Large"
               TextColor="Green"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />

        <!-- Retrieve Button -->
        <Button Margin="0,20,0,0"
                Text="Retrieve"
                FontSize="Medium"
                Clicked="OnRetrieveClicked"
                HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
